<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery=".pos-sale-ticket" t-operation="replace">
            
            <div class="pos-sale-ticket">
             <span class="pos-order-reference-value"><t t-esc="order.name"/>|</span>
                <div class="pos-ticket-header">

                    <div class="pos-center-align pos-logo">
                        <img  t-att-src="a2" class="img-logo"/>
                    </div>
                    <br /><br />
                    <div class="pos-center-align pos-order-reference" t-if="order.name">
                        <span class="pos-order-reference"><t t-esc="order.name"/></span><br /><br />
                    </div>

                    <div class="pos-center-align invoice-details" t-if="widget.pos.last_receipt_render_env.ejournal_name">
                        <div class="invoice-journal" style="font-size:18px"><t t-esc="widget.pos.last_receipt_render_env.ejournal_name"/></div>
                        <div class="invoice-number"><t t-esc="widget.pos.last_receipt_render_env.enumber"/></div>
                        
                    </div> 
                     
                    <div class="pos-center-align">
                    <br/>
                      <b><t t-esc="widget.pos.company.name"/></b>
                    </div>

                    <div class="pos-center-align" t-if="widget.pos.company.vat">
                        R.U.C <t t-esc="widget.pos.company.vat"/>
                    </div>
                    <div class="pos-center-align" t-if="widget.pos.company.street">
                        <t t-esc="widget.pos.company.street"/>
                    </div>

                    <div class="pos-center-align" t-if="widget.pos.company.phone">
                        <t t-esc="widget.pos.company.phone"/>
                    </div>
                </div> 


            

            <div class="pos-center-align val-date">
                <t t-esc="order.formatted_validation_date"/>
            </div> 

             <div class="company-details"  t-if="order.get_client()">
               <div class="company-details-padded">
                    <div class="receipt-vat">
                        Cliente: <t t-if="order.get_client().name" t-esc="order.get_client().name"  />
                    </div> 
                    <div class="receipt-phone" t-if="order.get_client().street">
                        Dirección: <t t-esc="order.get_client().street || ''"/> / <t t-esc="order.get_client().city || ''"/>
                    </div>
                    <div class="receipt-vat" t-if="order.get_client().vat">
                        <span t-esc="'R.U.C: '" t-if="order.get_client().sunat_tipo_documento == '6'"/>
                        <span t-esc="'D.N.I: '" t-if="order.get_client().sunat_tipo_documento == '1'"/>
                        <span t-esc="'C. extranjero: '" t-if="order.get_client().sunat_tipo_documento == '4'"/>
                        <span t-esc="'Pasaporte: '" t-if="order.get_client().sunat_tipo_documento == '47'"/>
                        <span t-esc="'CED. Diplomatica DE IDENTIDAD: '" t-if="order.get_client().sunat_tipo_documento == 'A'"/>
                        <span t-esc="'DOC.IDENT.PAIS.RESIDENCIA-Norder.get_client().D: '" t-if="order.get_client().sunat_tipo_documento == 'B'"/>
                        <span t-esc="'Tax Identification Number - TIN – Doc Trib PP.NN: '" t-if="order.get_client().sunat_tipo_documento == 'C'"/>
                        <span t-esc="'Identification Number - IN – Doc Trib PP. JJ: '" t-if="order.get_client().sunat_tipo_documento == 'D'"/>
                        <t t-esc="order.get_client().vat"/>   <br />
                    </div>                                
                </div>
            </div>                   
            <br />
            
            <div class="pos-order-lines">
            <t t-if="receipt.header">
                <div style='text-align:center'>
                    <t t-esc="receipt.header" />
                </div>
                <br />
            </t>
            <div class="productos-contenedor">
                <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='15%' />
                        <col width='41%' />  
                        <col width='20%' />                      
                        <col width='24%' />
                    </colgroup>
                    <tr>
                        <th>Cant</th>
                        <th>Descripción</th>          
                        <th>Precio</th>              
                        <th style="text-align:right;">Importe</th>
                    </tr>
                    <tr t-foreach="orderlines" t-as="orderline">                        
                        <td class="pos-left-align">
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </td>
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
                            <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a <t t-esc="orderline.get_discount()"/>% discount
                                </div>
                            </t>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.price)"/>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="productos-contenedor">
            <table class='receipt-total'>
                <tr>
                    <td>Subtotal:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                    </td>
                </tr>
                <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                    <tr>
                        <td><t t-esc="taxdetail.name" /></td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(taxdetail.amount)" />
                        </td>
                    </tr>
                </t>
                <tr>
                    <t t-if="order.get_total_discount() > 0">
                        <td>Discount:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.get_total_discount())"/>
                        </td>
                    </t>
                </tr>
                <tr class="emph">
                    <td>Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                    </td>
                </tr>
            </table>
            <div class="pos-total-letters">
                <t t-esc="widget.pos.last_receipt_render_env.total_letters"/>
            </div>        
            </div>
            <div class="seller-pos">
		<span>Vendedor: </span><t t-esc="widget.pos.get_cashier().name"/>
		</div>
        <div class="ticket_qr_image_pos productos-contenedor custom-pos-sale-ticket">
            <div style='text-align:center'>
                <img  t-att-src="widget.pos.last_receipt_render_env.qr_image" style="max-width: 134px;"/>
            </div>
	     
        </div>
        
        <div class="pos-center-align see-doc-txt">
             <p>El comprobante electrónico lo puede consultar en nuestro sitio web <t t-esc="widget.pos.company.website"/></p>
        </div>

        <div class="pos-center-align">
             <h3>GRACIAS POR SU PREFERENCIA</h3>
        </div>
        <div class="pos-center-align see-doc-txt">
            <small><t t-esc="widget.pos.config.receipt_footer"/></small>
        </div>
        <t t-jquery="t[t-if*='receipt.footer']" t-operation="after">
            <t t-if="widget.pos.config.barcode_receipt">
                <img id="barcode" class="barcode_receipt oe_hidden"/>
            </t>
            <t t-if="widget.pos.config.display_return_days_receipt">
                    <div class="pos-center-align">
                        <div class='pos-expire-date' font="b">
                            Period times return: <t t-esc="widget.pos.config.pos_order_period_return_days"/> days
                        </div>
                    </div>
                </t>
            </t>
            </div>
        </div>
        </t>
    </t>
</templates>