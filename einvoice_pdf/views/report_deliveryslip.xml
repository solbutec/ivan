<?xml version="1.0"?>
<odoo>
    <data>
        <template id="report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@class='page']" position="replace">
                <link href="/einvoice_pdf/static/src/css/report_delivery.css" rel="stylesheet"/>
                <div class="guide-block guide-header"> 
               
                <table class="table table-sm table-cst" style="border-top:1px solid #ccc;overflow:visible; margin-top:20px;">
                <tr>
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend" style="width:170px">Fecha de Inicio de. Traslado</div>
                            <div class="row-invoice-details-inner"><br></br><span t-field="o.date_done"/></div>
                        </div>
                    </td>  
                     <td>
                        <div>
                            <div class="row-invoice-details-leyend"  style="width:105px">Punto de Partida</div>
                            <div class="row-invoice-details-inner">
                                <span t-field="o.picking_type_id.warehouse_id.partner_id.street"/> - <span t-field="o.picking_type_id.warehouse_id.partner_id.city"/> - <span t-field="o.picking_type_id.warehouse_id.partner_id.zip"/>                                
                            </div>
                        </div>
                    </td>     
                </tr>
                <tr>
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend" style="width:90px">Destinatario</div>
                            <div class="row-invoice-details-inner"><span t-field="o.partner_id.name"/></div>
                        </div>
                    </td>  
                     <td rowspan="3">
                        <div>
                            <div class="row-invoice-details-leyend"  style="width:108px">Punto de Llegada</div>
                            <div class="row-invoice-details-inner">
                                <div>
                                    <span t-field="o.partner_id.street"/>
                                </div>
                                <div>
                                    <span t-field="o.partner_id.city"/>
                                </div>
                                <div>
                                    <span>C.P. </span><span t-field="o.partner_id.zip"/>
                                </div></div>
                        </div>
                    </td>     
                </tr>
                 <tr>
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend">
                                    <span t-esc="'RUC: '" t-if="o.partner_id.sunat_tipo_documento == '6'"/>
                                    <span t-esc="'DNI: '" t-if="o.partner_id.sunat_tipo_documento == '1'"/>
                                    <span t-esc="'Carnet extrangeria: '" t-if="o.partner_id.sunat_tipo_documento == '4'"/>
                                    <span t-esc="'Pasaporte: '" t-if="o.partner_id.sunat_tipo_documento == '47'"/>
                                    <span t-esc="'CED. DIPLOMATICA DE IDENTIDAD: '" t-if="o.partner_id.sunat_tipo_documento == 'A'"/>
                                    <span t-esc="'DOC.IDENT.PAIS.RESIDENCIA-NO.D: '" t-if="o.partner_id.sunat_tipo_documento == 'B'"/>
                                    <span t-esc="'Tax Identification Number - TIN – Doc Trib PP.NN: '" t-if="o.partner_id.sunat_tipo_documento == 'C'"/>
                                    <span t-esc="'Identification Number - IN – Doc Trib PP. JJ: '" t-if="o.partner_id.sunat_tipo_documento == 'D'"/>
                            </div>
                            <div class="row-invoice-details-inner"><span t-field="o.partner_id.vat"/></div>
                        </div>
                    </td>      
                </tr>
                 <tr>   
                    <td>
                        <div>
                            <div class="row-invoice-details-leyend"  style="width:130px">N° Doc. Identidad</div>
                            <div class="row-invoice-details-inner"><span t-field="o.partner_id.vat"/></div>
                        </div>
                    </td>      
                </tr>  
                </table>


                <table class="translate-reason">
                <tr>
                    <td colspan="3">
                     <div class="row-invoice-details-leyend" style="width:130px">Motivo del Traslado</div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div>         
                            <table>
                            <tr>
                            <td>
                            <span><img src="/einvoice_pdf/static/src/img/icons/checked.png" /></span>
                            </td>
                            <td>
                            <span>  Venta</span>
                            </td>
                            </tr>
                            </table>
                        </div>
                    </td> 
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Importación</span>
                           </td>
                            </tr>
                            </table>
                        </div>
                    </td>  
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Traslado emisor itinerante CP</span>
                            </td>
                            </tr>
                            </table>
                        </div>
                    </td> 
                </tr>
                 <tr>
                    <td>
                        <div>         
                            <table>
                            <tr>
                            <td>
                             <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                             </td>
                            <td>
                            <span>  Compra</span>
                          </td>
                            </tr>
                            </table>
                        </div>
                    </td> 
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Exportación</span>
                           </td>
                            </tr>
                            </table>
                        </div>
                    </td>  
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Traslado a zona primaria</span>
                           </td>
                            </tr>
                            </table>
                        </div>
                    </td> 
                </tr>
                 <tr>
                    <td>
                        <div>         
                            <table>
                            <tr>
                            <td>
                             <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                             </td>
                            <td>
                            <span>  Traslado entre establecimientos de la misma empresa</span>
                            </td>
                            </tr>
                            </table>
                          
                        </div>
                    </td> 
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Venta sujeta a confirmacion del comprador</span>
                           </td>
                            </tr>
                            </table>
                          
                        </div>
                    </td>  
                    <td>
                        <div>
                        <table>
                            <tr>
                            <td>
                           <span><img src="/einvoice_pdf/static/src/img/icons/unchecked.png" /></span>
                           </td>
                            <td>
                           <span>  Otros</span>
                           </td>
                            </tr>
                            </table>
                        </div>
                    </td> 
                </tr>
                </table>

                 <div>
                    <div class="row-invoice-details-leyend" style="width:165px;margin-top:-10px;position:absolute;">Datos del bien transportado</div>
                    <table class="table table-sm mt48 table-products-line" t-if="o.state!='done'">
                          
                            
                              <tr class="heading-products-line">
                                    <td>
                                        <strong>Código</strong>
                                    </td>
                                    <td>
                                        <strong>Descripción</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong>Cantidad</strong>
                                    </td>
                                     <td  class="text-center">
                                        <strong>Unidad Medida</strong>
                                    </td>
                                </tr>
                                <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>

                                <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id.default_code"/>
                                </td>
                                    <td>
                                        <span t-field="move.product_id"/>
                                        <p t-if="o.picking_type_code == 'outgoing'">
                                            <span t-field="move.product_id.sudo().description_pickingout"/>
                                        </p>
                                        <p t-if="o.picking_type_code == 'incoming'">
                                            <span t-field="move.product_id.sudo().description_pickingin"/>
                                        </p>
                                    </td>
                                    <td>
                                        <span t-field="move.product_uom_qty"/>                                       
                                    </td>
                                    <td>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                </tr>
                        </table>
                       
                        <table class="table table-sm mt48 table-products-line" t-if="o.move_line_ids and o.state=='done'">
                            <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" />
                           
                             <tr class="heading-products-line">
                                    <td>
                                        
                                        <strong>Código</strong>
                                    </td>
                                    <td>
                                        <strong>Descripción</strong>
                                    </td>
                                    <td name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    Lot/Serial Number
                                    </td>
                                    <td class="text-center">
                                        <strong>Cantidad</strong>
                                    </td>
                                     <td class="text-center">
                                        <strong>Unidad Medida</strong>
                                    </td>
                                </tr>
                                <tr t-foreach="o.move_line_ids" t-as="move_line">
                                    <td>
                                        <span t-field="move_line.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="move_line.product_id"/>
                                        <p t-if="o.picking_type_code == 'outgoing'">
                                            <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                        </p>
                                        <p t-if="o.picking_type_code == 'incoming'">
                                            <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                        </p>
                                    </td>
                                    <td t-if="has_serial_number and move_line.lot_name" groups="stock.group_lot_on_delivery_slip">
                                        <span t-field="move_line.lot_name"/>
                                    </td>
                                    <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                        <span t-field="move_line.lot_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="move_line.qty_done"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="move_line.product_uom_id"/>
                                    </td>
                                </tr>
                        </table>

                        <table  class="transportista-table-container">
                        <tr>
                            <td>
                                <div class="row-invoice-details-leyend" style="width:140px;margin-top:-10px;position:absolute;">Datos del transportista</div>
                                <table class="transportista-table">
                                    <tr class="heading-products-line">
                                        <td><br></br>RUC</td>
                                        <td><br></br>Nombre</td>
                                    </tr>
                                    <tr>
                                        <td><span t-field="o.carrier_id.ruc"/></td>
                                        <td><span t-field="o.carrier_id.name"/></td>
                                    </tr>
                                </table> 
                            </td>
                            <td>
                                <div class="row-invoice-details-leyend" style="width:290px;margin-top:-10px;position:absolute;">Datos de la Unidad de Transporte y conductor</div>
                                <table class="transportista-table">
                                    <tr class="heading-products-line">
                                        <td><br></br>Documento conductor</td>
                                        <td><br></br>Marca y Placa vehículo</td>
                                    </tr>
                                    <tr>
                                        <td><span t-field="o.carrier_id.nro_doc"/></td>
                                        <td><span t-field="o.carrier_id.placa"/></td>
                                    </tr>
                                </table> 
                            </td>
                        </tr>
                        </table>
                         <table  class="qr-table-container">
                            <tr>
                                <td>
                                    <div class="qr-delivery">
                                        <span t-field="o.qr_image" t-options='{"widget": "image"}'/>                                        
                                    </div>
                                     <div class="digest_value"><span t-field="o.digest_value"/></div>
                                     <div><p t-field="o.note" /></div>
                                </td>
                                <td>
                                    <div>
                                        <span>Representación impresa de la <span t-if="o.journal_id"><span t-field="o.journal_id.name" /></span> <span t-if="not o.journal_id">Orden</span>, consulte en https://e-consultaruc.sunat.gob </span>
                                    </div>
                                    <div><span>Autorizado mediante RESOLUCIÓN DE INTENDENCIA : 0340050008568/SUNAT</span></div>
                              
                                </td>
                            </tr>
                        </table>

                    </div>
                </div>        
            </xpath>
        </template> 
        <template id="external_layout_header" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@class='header']" position="replace">
                <link href="/einvoice_pdf/static/src/css/invoice_template.css" rel="stylesheet"/>
                <div class="header" style="font-family: 'Roboto', sans-serif;font-weight: bold;">
                    <div class="header-custom">
                        
                        <div class="header-tabbed"><img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 119px;opacity:1" alt="Logo"/></div>
                        <div class="header-tabbed">
                            <div class="header-company-name" t-esc="company.name.encode('utf-8', 'ignore').upper()"/>
                            <div class="header-company-basic-info" t-esc="company.street.encode('utf-8', 'ignore').capitalize()"/>
                            <div class="header-company-basic-info">
                                <span class="header-company-basic-info" t-esc="company.province_id.name.encode('utf-8', 'ignore').capitalize()"/>
                                <span> - </span>
                                <span class="header-company-basic-info" t-esc="company.district_id.name.encode('utf-8', 'ignore').capitalize()"/>
                            </div> 
                            <div class="header-company-basic-info">
                                <span> Tel: </span>
                                <span class="header-company-basic-info" t-esc="company.phone.encode('utf-8', 'ignore')"/>                               
                            </div>     
                            <div class="header-company-basic-info"  t-if="company.email">
                                <span> Email: </span>
                                <span class="header-company-basic-info" t-esc="company.email.encode('utf-8', 'ignore').lower()"/>
                            </div>                        
                        </div>
                        <div class="header-tabbed">
                            <div class="box-company-fiscal-info">
                                <div>
                                    <span> RUC: </span>
                                    <span t-esc="company.vat"/>
                                </div>    
                                <div t-if="o.picking_type_id"><div t-field="o.picking_type_id.sequence_id.name"/></div>
                                <div t-if="o.name and not o.journal_id and o.state == 'draft' " >Cotización</div>
                                <div t-if="o.name and not o.journal_id and o.state == 'sale' " >Orden de Venta</div>
                                <div t-if="o.name and not o.journal_id" ><div t-field="o.name"/></div>
                                <div t-if="o.journal_id"><div t-field="o.journal_id.name"/></div>
                                <div t-if="o.number"><div  t-field="o.number"/></div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>       
    </data>
</odoo>
